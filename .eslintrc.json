{
    "$schema": "https://json.schemastore.org/eslintrc",
    "root": true,
    "extends": ["eslint:recommended", "next/core-web-vitals", "plugin:@typescript-eslint/recommended", "plugin:import/recommended", "plugin:import/typescript", "plugin:prettier/recommended", "plugin:tailwindcss/recommended"],
    "plugins": ["@typescript-eslint", "prettier", "tailwindcss"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "prettier/prettier": "warn",
        "tailwindcss/no-custom-classname": "off",
        "tailwindcss/enforces-shorthand": "off",
        "tailwindcss/classnames-order": "warn",
        "tailwindcss/no-unnecessary-arbitrary-value": "off",
        "import/named": "warn",
        "import/no-unresolved": "off",
        "no-unused-vars": "off",
        "no-undef": "warn",
        "no-duplicate-imports": ["error", { "includeExports": true }],
        "import/order": [
            "error",
            {
                "groups": ["type", "builtin", "external", "internal", "parent", "sibling", "index", "object"],
                "newlines-between": "always",
                "alphabetize": { "order": "asc", "caseInsensitive": true }
            }
        ],
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off"
    },
    "settings": {
        "tailwindcss": {
            "callees": ["cn", "cva"],
            "config": "tailwind.config.js"
        }
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                // TypeScript-specific rules can go here
            }
        }
    ]
}
