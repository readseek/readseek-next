{
    "root": true,
    "extends": ["eslint:recommended", "next/core-web-vitals", "plugin:prettier/recommended", "plugin:tailwindcss/recommended"],
    "plugins": ["prettier", "tailwindcss"],
    "rules": {
        "prettier/prettier": "warn",
        "tailwindcss/no-custom-classname": "off",
        "tailwindcss/enforces-shorthand": "off",
        "tailwindcss/classnames-order": "warn",
        "tailwindcss/no-unnecessary-arbitrary-value": "off",
        "tailwindcss/migration-from-tailwind-2": "off",
        "no-unused-vars": "off",
        "no-undef": "warn",
        "no-prototype-builtins": "off"
    },
    "settings": {
        "tailwindcss": {
            "callees": ["cn", "cva"],
            "config": "tailwind.config.js"
        },
        "import/resolver": {
            "typescript": {}
        }
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "plugins": ["@typescript-eslint"],
            "extends": ["plugin:@typescript-eslint/recommended", "plugin:import/typescript", "plugin:import/recommended"],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "@typescript-eslint/ban-types": "off",
                "@typescript-eslint/ban-ts-comment": "off",
                "@typescript-eslint/no-unused-vars": "off",
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/no-require-imports": "off",
                "@typescript-eslint/no-empty-object-type": "off",
                "@typescript-eslint/no-unsafe-function-type": "off",
                "@typescript-eslint/experimental-decorators": "off",
                "@typescript-eslint/explicit-function-return-type": "off",
                "no-duplicate-imports": ["error", { "includeExports": true }],
                "prefer-const": "off",
                "import/named": "off",
                "import/no-unresolved": "warn",
                "import/order": [
                    "error",
                    {
                        "groups": ["type", "builtin", "external", "internal", "parent", "sibling", "index", "object"],
                        "newlines-between": "always",
                        "alphabetize": { "order": "asc", "caseInsensitive": true }
                    }
                ]
            }
        }
    ],
    "$schema": "https://json.schemastore.org/eslintrc",
    "ignorePatterns": ["*.test.tsx", "*.d.ts", "./src/components/ui/*.tsx"]
}
